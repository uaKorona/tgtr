{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@client/data-access": ["libs/client/data-access/src/index.ts"],
      "@client/feature-game": ["libs/client/feature-game/src/index.ts"],
      "@client/ui-components": ["libs/client/ui-components/src/index.ts"],
      "@server/data-access": ["libs/server/data-access/src/index.ts"],
      "@server/feature-auth": ["libs/server/feature-auth/src/index.ts"],
      "@server/feature-game": ["libs/server/feature-game/src/index.ts"],
      "@server/feature-health": ["libs/server/feature-health/src/index.ts"],
      "@server/feature-user": ["libs/server/feature-user/src/index.ts"],
      "@server/util": ["libs/server/util/src/index.ts"],
      "@server/util/testing": ["libs/server/util/src/lib/testing/index.ts"],
      "@shared/domain": ["libs/shared/domain/src/index.ts"],
      "@shared/util-env": ["libs/shared/util-env/src/index.ts"],
      "@shared/util-testing": ["libs/shared/util-testing/src/index.ts"],
      "@tgtr/client/ui-style": ["libs/client/ui-style/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
